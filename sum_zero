import java.io.*;
import java.util.*;
class sum_zero
{
public static void main(String args[])
{
int i,j;
Scanner s=new Scanner(System.in);
int a=s.nextInt();
int b[]=new int[a];
for(i=0;i<a;i++)
{
b[i]=s.nextInt();
}
for(i=0;i<a;i++)
{
for(j=i+1;j<a;j++)
{
if((b[i]+b[j])==0)
{
if(j==a-1)
{
System.out.print(b[i]+"and"+b[j]);
}
else
{
System.out.print((b[i]+"and"+b[j]+","));
}
}
}
}
}
}
